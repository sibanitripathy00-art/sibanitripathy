<script>
/* ========== USER CONFIG - Edit these ========== */
const conf = {
  name: "Miss Rani",                // recipient name
  shortName: "Rani",                  // short name used in other spots
  age: 20,                            // number to show
  message: "Happy Birthday, Rani! May your year be filled with laughter, growth, and late-night cake. ‚ù§Ô∏è",
  photos: [
    // Put image URLs or local paths (relative). Replace or remove as needed.
    "https://images.unsplash.com/photo-1543353071-873f17a7a088?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=a7a8b2a9b0b6c7d8e9f0",
    "https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=9b3fc3f63e4995b8d7b9",
    "https://images.unsplash.com/photo-1511988617509-a57c8a288659?q=80&w=1200&auto=format&fit=crop&ib=rb-4.0.3&s=8a2b4ea60f6f5bb9cbe8"
  ],
  music: "", // optional: insert direct mp3 url (leave empty to disable). Example: "https://example.com/song.mp3"
  birthdayISO: "", // optional ISO date like "2025-11-03T00:00:00" for countdown; leave empty to hide countdown
  rsvpEmail: "friend@example.com" // edit RSVP mailto
};
/* ============================================== */

/* Apply config to page */
document.getElementById("personName").textContent = conf.name;
document.getElementById("rightName").textContent = conf.shortName || conf.name;
document.getElementById("ageNum").textContent = conf.age;
document.getElementById("titleHead").innerHTML = `Happy Birthday, <span style="color:var(--accent)">${conf.shortName || conf.name}</span>! üéâ`;
document.getElementById("messageBody").textContent = conf.message;
document.getElementById("shortMessage").innerHTML = `<strong>From:</strong> Your friends & family ‚Äî <em>celebrating you today.</em>`;
document.getElementById("rsvpBtn").href = `mailto:${encodeURIComponent(conf.rsvpEmail)}?subject=${encodeURIComponent("Birthday RSVP for " + conf.name)}`;

/* Photo carousel logic */
let photos = conf.photos && conf.photos.length ? conf.photos : ["https://images.unsplash.com/photo-1524504388940-b1c1722653e1?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=df7a4b1d60a2c4e3b4d6"];
const imgEl = document.getElementById("carouselImg");
const dots = Array.from(document.querySelectorAll(".dot"));
let idx = 0;
function refreshCarousel(){
  imgEl.src = photos[idx];
  dots.forEach(d=>d.classList.toggle("active", Number(d.dataset.idx)===idx));
}
dots.forEach(d=>d.addEventListener("click", e=>{
  idx = Number(e.currentTarget.dataset.idx);
  refreshCarousel();
}));
refreshCarousel();
/* auto rotate */
setInterval(()=>{ idx = (idx+1) % photos.length; refreshCarousel(); }, 4000);

/* Audio controls */
const audio = document.getElementById("bgAudio");
const playBtn = document.getElementById("playBtn");
const pauseBtn = document.getElementById("pauseBtn");
if(conf.music && conf.music.trim().length>5){
  audio.src = conf.music;
  playBtn.onclick = ()=>{ audio.play().catch(()=>{}); playBtn.textContent = "Playing ‚ñ∂"; };
  pauseBtn.onclick = ()=>{ audio.pause(); playBtn.textContent = "Play Music ‚ñ∂"; };
} else {
  // disable play if no music
  playBtn.onclick = ()=>{ alert("No music URL configured. Edit the file and set conf.music to an mp3 URL."); };
  pauseBtn.onclick = ()=>{ /* noop */ };
}

/* Share link (copies page URL) */
document.getElementById("shareLink").addEventListener("click", (e)=>{
  e.preventDefault();
  try {
    navigator.clipboard.writeText(location.href);
    alert("Page link copied to clipboard ‚Äî share it with friends!");
  } catch(err){
    prompt("Copy this link:", location.href);
  }
});

/* Countdown */
if(conf.birthdayISO && conf.birthdayISO.trim().length>3){
  const target = new Date(conf.birthdayISO);
  function updateCountdown(){
    const now = new Date();
    let diff = Math.max(0, target - now);
    const days = Math.floor(diff / (1000*60*60*24));
    diff -= days * (1000*60*60*24);
    const hours = Math.floor(diff / (1000*60*60));
    diff -= hours * (1000*60*60);
    const mins = Math.floor(diff / (1000*60));
    diff -= mins * (1000*60);
    const secs = Math.floor(diff / 1000);
    document.getElementById("cdDays").textContent = String(days).padStart(2,"0");
    document.getElementById("cdHours").textContent = String(hours).padStart(2,"0");
    document.getElementById("cdMins").textContent = String(mins).padStart(2,"0");
    document.getElementById("cdSecs").textContent = String(secs).padStart(2,"0");
  }
  updateCountdown();
  setInterval(updateCountdown, 1000);
} else {
  // hide countdown row if not set
  document.getElementById("countdownRow").style.display = "none";
}

/* Confetti: simple canvas particle system */
const canvas = document.getElementById("confetti-canvas");
const ctx = canvas.getContext("2d");
let W = canvas.width = canvas.offsetWidth;
let H = canvas.height = canvas.offsetHeight;
window.addEventListener("resize", ()=>{ W = canvas.width = canvas.offsetWidth; H = canvas.height = canvas.offsetHeight; });

class Confetti {
  constructor(){
    this.reset();
  }
  reset(){
    this.x = Math.random()*W;
    this.y = Math.random()*-H;
    this.w = 6 + Math.random()*10;
    this.h = 6 + Math.random()*7;
    this.vx = -1 + Math.random()*2;
    this.vy = 2 + Math.random()*3;
    this.rotation = Math.random()*360;
    this.vr = -4 + Math.random()*8;
    this.color = ['#ff6b6b','#ffd166','#6ee7b7','#9b8cff','#60a5fa'][Math.floor(Math.random()*5)];
    this.opacity = 0.9;
  }
  step(){
    this.x += this.vx;
    this.y += this.vy;
    this.vy += 0.03; // gravity
    this.rotation += this.vr;
    if(this.y > H + 40 || this.x < -40 || this.x > W + 40) this.reset();
  }
  draw(){
    ctx.save();
    ctx.translate(this.x, this.y);
    ctx.rotate(this.rotation * Math.PI/180);
    ctx.globalAlpha = this.opacity;
    ctx.fillStyle = this.color;
    ctx.fillRect(-this.w/2, -this.h/2, this.w, this.h);
    ctx.restore();
  }
}
let confettis = [];
for(let i=0;i<60;i++) confettis.push(new Confetti());
let confettiOn = true;
document.getElementById("toggleConfetti").addEventListener("click", ()=>{
  confettiOn = !confettiOn;
  document.getElementById("toggleConfetti").textContent = confettiOn ? "Toggle Confetti üéä" : "Confetti Off";
});

function loop(){
  ctx.clearRect(0,0,W,H);
  if(confettiOn){
    confettis.forEach(c=>{ c.step(); c.draw(); });
  }
  requestAnimationFrame(loop);
}
loop();

/* small flourish: click cake to trigger confetti burst */
document.querySelector(".cake").addEventListener("click", ()=>{
  for(let i=0;i<40;i++){
    const c=new Confetti();
    c.x = W/2 + (Math.random()-0.5)*180;
    c.y = H/3 + (Math.random()-0.5)*80;
    c.vx = -6 + Math.random()*12;
    c.vy = -6 + Math.random()*2;
    confettis.push(c);
  }
});

/* Accessibility focus: make dots keyboard accessible */
dots.forEach(d=>{ d.tabIndex=0; d.addEventListener("keydown", (e)=>{ if(e.key==="Enter") d.click(); }) });

/* Nice-to-have: encourage user to customize the conf object if this is shared */
console.log("Customize the conf object at top of the file to personalize the page. Enjoy! üéâ");
</script>
</body>
